#!/usr/bin/env ruby
# -*- mode: ruby -*-

require 'rda'

begin
  require File.expand_path('./config/application', __FILE__)
rescue LoadError
  $stderr.puts "ERROR: You should run rda under rails applications"
  exit
end

class RdaCommand < Thor
  desc 'nginx', 'Manage settings of nginx'
  def nginx(action)
    nginx = Rda::Nginx.new

    nginx.send(action.to_sym)
  end
end

RdaCommand.start
